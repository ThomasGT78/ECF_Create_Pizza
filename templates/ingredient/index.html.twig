{% extends 'base.html.twig' %}

{% block title %}Liste des ingrédients{% endblock %}

{% block body %}
    <h1>Liste des ingrédients</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Dénomination</th>
                <th>prix</th>
                <th>Vegetarien</th>
                <th>Vegan</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.ingredientName }}</td>
                <td>{{ ingredient.ingredientPrice }} €</td>
                <td>{{ ingredient.vegetarian ? 'Yes' : 'No' }}</td>
                <td>{{ ingredient.vegan ? 'Yes' : 'No' }}</td>
                <td class="flex">
                    <div><a class="btn btn-success" href="{{ path('ingredient_show', {'id': ingredient.id}) }}">show</a></div>
                    <div><a class="btn btn-warning" href="{{ path('ingredient_edit', {'id': ingredient.id}) }}">edit</a></div>
                    {{ include('ingredient/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('ingredient_new') }}">Create new</a>
{% endblock %}
